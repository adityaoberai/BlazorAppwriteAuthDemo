@page "/Error"
@using System.Diagnostics

<PageTitle>Error</PageTitle>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h3 class="mb-0">
                        <i class="bi bi-exclamation-triangle me-2"></i>
                        Something went wrong
                    </h3>
                </div>
                <div class="card-body">
                    <div class="alert alert-danger" role="alert">
                        <h4 class="alert-heading">Oops! An error occurred</h4>
                        <p>We're sorry, but something went wrong while processing your request.</p>
                        <hr>
                        <p class="mb-0">
                            This issue has been logged and our team has been notified. 
                            Please try refreshing the page or going back to the previous page.
                        </p>
                    </div>

                    <div class="d-flex gap-2 mt-4">
                        <a href="/" class="btn btn-primary">
                            <i class="bi bi-house me-1"></i>
                            Go Home
                        </a>
                        <button type="button" class="btn btn-outline-secondary" onclick="history.back()">
                            <i class="bi bi-arrow-left me-1"></i>
                            Go Back
                        </button>
                        <button type="button" class="btn btn-outline-info" onclick="location.reload()">
                            <i class="bi bi-arrow-clockwise me-1"></i>
                            Refresh Page
                        </button>
                    </div>

                    @if (ShowRequestId)
                    {
                        <div class="mt-4">
                            <details class="border rounded p-3">
                                <summary class="fw-bold text-muted">Technical Details</summary>
                                <div class="mt-3">
                                    <p><strong>Request ID:</strong> <code>@RequestId</code></p>
                                    <p><strong>Time:</strong> @DateTime.UtcNow.ToString("yyyy-MM-dd HH:mm:ss UTC")</p>
                                </div>
                            </details>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@code{
    [CascadingParameter]
    private HttpContext? HttpContext { get; set; }

    private string? RequestId { get; set; }
    private bool ShowRequestId => !string.IsNullOrEmpty(RequestId);

    protected override void OnInitialized() =>
        RequestId = Activity.Current?.Id ?? HttpContext?.TraceIdentifier;
}
